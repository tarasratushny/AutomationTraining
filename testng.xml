<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Automation Training">
  <listeners>
    <listener class-name="com.miamato.listeners.TestResultsListener" />
    <listener class-name="com.miamato.listeners.TestReporter" />
  </listeners>
  <test name="Allure Reports Example Edge">
    <parameter name="browserName" value="Edge" />
    <parameter name="testDataFileName" value="default.properties"/>
    <classes>
      <class name="com.miamato.steam.ProductInfoOnPdp" />
    </classes>
  </test>
  <test name="Allure Reports Example Chrome">
    <parameter name="browserName" value="Chrome" />
    <parameter name="testDataFileName" value="otherEnv.properties" />
    <classes>
      <class name="com.miamato.steam.ProductInfoOnPdp" />
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->